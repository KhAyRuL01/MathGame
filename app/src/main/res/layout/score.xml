<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/math">

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:text="score : 0 "
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/score_menu"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:text="Menu"
        android:textSize="20dp"
        android:onClick="back_to_menu"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/exit"
        android:layout_alignStart="@+id/exit" />

    <Button
        android:id="@+id/exit"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:text="Exit"
        android:textSize="20dp"
        android:onClick="exit_game"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_below="@+id/score_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />
</RelativeLayout>
